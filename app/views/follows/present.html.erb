
	<b>
	<%= @user.username %> is followed by:
	</b>

   <% @follows.each do |follow| %>

   <a href = "/users/<%=follow.getfollower.id%>">
      <%= image_tag follow.getfollower.image_url(:tinythumb).to_s%>
    </a>
    
     <p>
    <%= follow.getfollower.username %>
    </p>
     <p>
    <%= follow.getfollower.email %>
    </p>
   
    <% if User.find_by_id(session[:user_id]).hasFollowedHim(follow.getfollower.id) %>
       <a href="/follows/destroy/<%=follow.follower_id%>" class="button red">
            Unfollow
        </a>
     <% else %>
        <a href="/follows/new/<%=follow.follower_id%>" class="button blue">
            Follow
        </a>
    <% end %>

 <% end %>

<br />